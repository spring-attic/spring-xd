<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="../transports/redis-common.xml" />

	<bean id="jobDefinitionRepository"
		class="org.springframework.xd.dirt.stream.redis.RedisJobDefinitionRepository">
		<constructor-arg ref="stringRedisTemplate" />
	</bean>

	<bean id="xdJobRepository"
		class="org.springframework.xd.dirt.stream.redis.RedisJobRepository">
		<constructor-arg ref="stringRedisTemplate" />
		<constructor-arg ref="jobDefinitionRepository" />
	</bean>

	<bean id="streamDefinitionRepository"
		class="org.springframework.xd.dirt.stream.redis.RedisStreamDefinitionRepository">
		<constructor-arg ref="stringRedisTemplate" />
		<constructor-arg ref="moduleDependencyRepository" />
	</bean>

	<bean id="streamRepository"
		class="org.springframework.xd.dirt.stream.redis.RedisStreamRepository">
		<constructor-arg ref="stringRedisTemplate" />
		<constructor-arg ref="streamDefinitionRepository" />
	</bean>

	<bean id="runtimeContainerInfoRepository"
		class="org.springframework.xd.dirt.container.store.RedisRuntimeContainerInfoRepository">
		<constructor-arg ref="stringRedisTemplate" />
	</bean>

	<bean id="runtimeModuleInfoRepository"
		class="org.springframework.xd.dirt.module.store.RedisRuntimeModuleInfoRepository">
		<constructor-arg name="repoPrefix" value="modules" />
		<constructor-arg ref="stringRedisTemplate" />
	</bean>

	<bean id="runtimeContainerModuleInfoRepository"
		class="org.springframework.xd.dirt.module.store.RedisRuntimeContainerModuleInfoRepository">
		<constructor-arg name="repoPrefix" value="modules-container" />
		<constructor-arg ref="stringRedisTemplate" />
	</bean>

	<bean id="moduleDefinitionRepository"
		class="org.springframework.xd.dirt.module.redis.RedisModuleDefinitionRepository">
		<constructor-arg value="module.definitions" />
		<constructor-arg ref="stringRedisTemplate" />
		<constructor-arg ref="moduleRegistry" />
		<constructor-arg ref="moduleDependencyRepository" />
	</bean>

	<bean id="moduleDependencyRepository"
		class="org.springframework.xd.dirt.module.redis.RedisModuleDependencyRepository">
		<constructor-arg ref="stringRedisTemplate" />
	</bean>

	<bean id="moduleRegistry"
		class="org.springframework.xd.dirt.module.DelegatingModuleRegistry">
		<constructor-arg>
			<list>
				<bean class="org.springframework.xd.dirt.module.ResourceModuleRegistry">
					<constructor-arg value="${xd.module.home}/" />
				</bean>
				<bean class="org.springframework.xd.dirt.module.ResourceModuleRegistry">
					<constructor-arg value="classpath:/modules/" />
				</bean>
			</list>
		</constructor-arg>
	</bean>

</beans>
